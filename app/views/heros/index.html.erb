<p id="notice"><%= notice %></p>

<h1>Heros</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Hero handle</th>
      <th>Address</th>
      <th>City</th>
      <th>Zip</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @heros.each do |hero| %>
      <tr>
        <td><%= hero.first_name %></td>
        <td><%= hero.last_name %></td>
        <td><%= hero.hero_handle %></td>
        <td><%= hero.address %></td>
        <td><%= hero.city %></td>
        <td><%= hero.zip %></td>
        <td><%= hero.email %></td>
        <td><%= hero.phone %></td>
        <td><%= link_to 'Show', hero %></td>
        <td><%= link_to 'Edit', edit_hero_path(hero) %></td>
        <td><%= link_to 'Destroy', hero, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

